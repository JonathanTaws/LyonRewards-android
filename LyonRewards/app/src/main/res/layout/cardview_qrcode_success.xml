<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_qrcode_success_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_qrcode_success_image_size"
            android:padding="0dp">

            <ImageView
                android:id="@+id/card_qrcode_success_image"
                android:layout_width="@dimen/card_qrcode_success_image_size"
                android:layout_height="@dimen/card_qrcode_success_image_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:padding="18dp"
                android:src="@drawable/icon_success_key_unknown" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_qrcode_success_image"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:id="@+id/card_qrcode_success_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titre du QR Code"
                    android:textColor="#222"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/card_qrcode_success_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Indice pour trouver le QR Code"
                    android:textColor="#666"
                    android:textSize="14dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/card_qrcode_success_image"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/card_qrcode_success_nbpoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="100"
                    android:textColor="#58863A"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=" Points"
                    android:textColor="#58863A"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/card_qrcode_success_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="28 AVR."
                    android:textColor="#666"
                    android:textSize="12dp" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>